<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout9"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".TermsAndConditionsFragment">

    <TextView
        android:id="@+id/textView32"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/montserrat_bold"
        android:text="@string/terms_and_condition"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/termsAndConditionEditText"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/plain_text"
        android:gravity="start|top"
        android:hint="Type Here"
        android:inputType="text|textImeMultiLine|textMultiLine"
        android:letterSpacing="0.01"
        android:lineSpacingExtra="5dp"
        android:padding="25dp"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/termsAndConditionSaveButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/textView32"
        app:layout_constraintTop_toBottomOf="@+id/textView32" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/termsAndConditionSaveButton"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_marginBottom="28dp"
        android:background="@drawable/buttons_shape"
        android:backgroundTint="@color/color_blue"
        android:fontFamily="@font/montserrat_medium"
        android:text="@string/mentor_profile_save"
        android:textColor="@color/color_white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/termsAndConditionEditText"
        app:layout_constraintStart_toStartOf="@+id/termsAndConditionEditText" />
</androidx.constraintlayout.widget.ConstraintLayout>